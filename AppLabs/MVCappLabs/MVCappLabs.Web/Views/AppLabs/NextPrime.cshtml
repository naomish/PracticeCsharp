@model MVCappLabs.Web.Models.AppLabs.PrimeSearchTool

@{
    ViewBag.Title = "NextPrime";
}

<h2>NextPrime</h2>
<div class="row">
    <div class="col-sm-12">Give me a number between 0 and 4,294,967,290 and I'll find the next prime.</div>
</div>

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm("NextPrime", "AppLabs", FormMethod.Post, new {role = "form"}))
        {
            @Html.ValidationSummary()
            <div class ="form-group">
                <label for ="StartYear">FirstNumber</label>
                @Html.TextBoxFor(m=>m.FirstNumber, new{@class="form-control", placeholder ="Enter a number"})
            </div>
            
            <div id="answer">
                <div class="form-group">
                    <label for ="NextPrime">The Next Prime Number:</label>
                    @Html.DisplayFor(m=>m.NextPrime)
                </div>
            </div>
            
           <div class="col-sm-9">
                <div class="col-sm-6"><button type="submit" class="btn btn-default">Submit</button></div>
                <div class ="col-sm-6"><h5>@Html.ActionLink("Back to App Labs", "Index")</h5></div>
            </div>
        }

</div>
</div>

