@model MVCappLabs.Web.Models.AppLabs.VendingTool

@{
    ViewBag.Title = "VendingMachine";
}

<h2>Vending Machine</h2>

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm("VendingMachine", "AppLabs", FormMethod.Post, new {role = "form"}))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="VendingItems">Items</label>
                @Html.DropDownListFor(m=>m.Item.Price, new SelectList (Model.Items,"Price","Name"))
            </div>
            
            <div class="form-group">
                <label for="Payment">Total Payment</label>
                @Html.TextBoxFor(m=>m.Payment,  new{@class="form-control", placeholder ="Enter in the form of a decimal. No $, commas or spaces."})
            </div>
            
                    <div class="col-sm-9">
                <div class="col-sm-6"><button type="submit" class="btn btn-default">Submit</button></div>
                <div class ="col-sm-6"><h5>@Html.ActionLink("Back to App Labs", "Index")</h5></div>
            </div>
        }
    </div>
</div>

